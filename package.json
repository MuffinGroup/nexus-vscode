{
  "name": "nexus-vscode",
  "displayName": "nexus-vscode",
  "description": "Language support for nexus",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "nexus",
      "aliases": ["Nexus", "nexus"],
      "extensions": [".nx"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "nexus",
      "scopeName": "source.nexus",
      "path": "./syntaxes/nexus.tmLanguage.json"
    }],
    "themes": [
      {
        "label": "My Custom Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/nexus.json"
      }
    ]
  }
}
